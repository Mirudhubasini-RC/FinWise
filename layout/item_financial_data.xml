<?xml version="1.0" encoding="utf-8"?>
<!-- item_month_financial_data.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/textYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:text="Year" />
        <TextView
            android:id="@+id/textMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:background="@color/royalpurple"
            android:text="Month" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textIncomeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Income"
                android:textColor="@android:color/white"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/textBudgetTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Budget"
                android:textColor="@android:color/white"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/textTotalSpendingTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@color/black"
                android:text="Spent" />
            <TextView
                android:id="@+id/textTotalSavingsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:background="@color/black"
                android:text="Savings" />
        </LinearLayout>


        <!-- Data Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textIncome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Income"
                android:textColor="@android:color/black"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/textBudget"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Budget"
                android:textColor="@android:color/black"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/textTotalSpending"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@color/white"
                android:text="Spending" />

            <TextView
                android:id="@+id/textTotalSaving"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:background="@color/white"
                android:text="Savings"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


